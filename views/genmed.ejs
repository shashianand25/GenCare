    margin-bottom: 1.5rem;
  }
  
  .boxes {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 1rem;
    justify-items: center;
  }
  
  .box {
    width: 25rem;
    height: 10rem;
    padding: 0;
    display: flex;
    flex-direction: column;
    color: white;
    font-size: 1.2em;
    opacity: 0;
    transform: scale(0.8);
    transition: all 0.5s ease;
    border-radius: 2rem;
    border: 0.1rem solid black;
    margin:0;
    background-color: #00796b;
  }
  
  .top-left {
    transform-origin: left center;
  }
  
  .top-center {
    transform-origin: top center;
  }
  
  .top-right {
    transform-origin: right center;
  }
  
  .bottom-left {
    transform-origin: left bottom;
  }
  
  .bottom-center {
    transform-origin: bottom center;
  }
  
  .bottom-right {
    transform-origin: right bottom;
  }
  
  .box.show {
    opacity: 1;
    transform: scale(1);
  }
  
  .box.top-left.show {
    animation: slideInFromLeft 2s forwards;
  }
  
  .box.top-center.show {
    animation: slideInFromTop 2s forwards;
  }
  
  .box.top-right.show {
    animation: slideInFromRight 2s forwards;
  }
  
  .box.bottom-left.show {
    animation: slideInFromLeft 2s forwards;
  }
  
  .box.bottom-center.show {
    animation: slideInFromBottom 2s forwards;
  }
  
  .box.bottom-right.show {
    animation: slideInFromRight 2s forwards;
  }
  
  @keyframes slideInFromLeft {
    from {
      transform: translateX(-100%) scale(0.8);
    }
    to {
      transform: translateX(0) scale(1);
    }
  }
  
  @keyframes slideInFromTop {
    from {
      transform: translateY(-100%) scale(0.8);
    }
    to {
      transform: translateY(0) scale(1);
    }
  }
  
  @keyframes slideInFromRight {
    from {
      transform: translateX(100%) scale(0.8);
    }
    to {
      transform: translateX(0) scale(1);
    }
  }
  
  @keyframes slideInFromBottom {
    from {
      transform: translateY(100%) scale(0.8);
    }
    to {
      transform: translateY(0) scale(1);
    }
  }
  
  .animation-container {
    border: 0.1rem solid #e7e4df;
    height: 13rem;

  }
